{
  "name": "sora",
  "version": "1.4.0",
  "description": "Track gacha game server reset times across different regions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "tsc && bun build src/public/assets/app.js --outdir=dist/public/assets --minify --sourcemap --metafile-md=meta.md && xcopy \"src\\public\" \"dist\\public\" /E /I /Y /Q",
    "start": "bun run dist/index.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "analyze": "bun build src/public/assets/app.js --outdir=dist --metafile-md=analysis.md"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tinyhttp/app": "^3.0.1",
    "@tinyhttp/logger": "^2.1.0",
    "dotenv": "^16.6.1",
    "js-yaml": "^4.1.1",
    "milliparsec": "^5.1.0"
  },
  "keywords": [
    "gacha",
    "gaming",
    "typescript",
    "nodejs",
    "server",
    "tracking"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RimunAce/sora.git"
  },
  "author": "RimunAce",
  "license": "MIT"
}